<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="58dp"
    tools:context=".Fragments.DdccuscoFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:background="#BC1A0E"
        android:text="@string/ddchvcaTitulo"
        android:textAlignment="center"
        android:textColor="#F8F3F3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.codesgood.views.JustifiedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/ddchvcacon1"
        android:textSize="14sp" />

    <com.codesgood.views.JustifiedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="14sp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/ddchvcacon2"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="14sp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:text="Telefono: (+51 84) 582030"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/btnLlamarDDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call" />


    </LinearLayout>


</LinearLayout>