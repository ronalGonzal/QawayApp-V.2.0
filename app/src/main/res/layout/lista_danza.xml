<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imgDanza"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher">
        </ImageView>
        <TextView
            android:id="@+id/nomDanza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Danza"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imgDanza"
            android:layout_toEndOf="@+id/imgDanza"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

        </TextView>
        <TextView
            android:id="@+id/desDanza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n de la Danza"
            android:layout_toRightOf="@+id/imgDanza"
            android:layout_below="@+id/nomDanza"
            android:layout_toEndOf="@+id/imgDanza"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

        </TextView>

    </RelativeLayout>


</androidx.cardview.widget.CardView>